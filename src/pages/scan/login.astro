---
import "../../styles/global.css";

const error = Astro.url.searchParams.get('error') === '1';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whole Brand Scan â€” Login</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-[#f7f6f4] min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-wba-deep text-white py-6 px-4">
      <div class="max-w-5xl mx-auto flex items-center gap-4">
        <img src="/logos/wba-logo-draft.svg" alt="Whole Brand Academy" class="h-10 brightness-0 invert" />
      </div>
    </header>

    <!-- Login card -->
    <main class="flex-1 flex items-center justify-center px-4 py-12">
      <div class="w-full max-w-md">
        <div class="bg-white rounded-xl shadow-lg p-8">
          <h1 class="text-2xl font-bold text-wba-deep mb-2">Whole Brand Scan</h1>
          <p class="text-gray-500 text-sm mb-6">Internal Preview</p>

          {error && (
            <div class="bg-red-50 border border-red-200 text-red-700 text-sm rounded-lg px-4 py-3 mb-6">
              Incorrect password. Please try again.
            </div>
          )}

          <form method="POST" action="/api/scan-auth">
            <label for="password" class="block text-sm font-medium text-wba-deep mb-2">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              autofocus
              class="w-full border border-gray-300 rounded-lg px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-wba-deep focus:border-transparent"
              placeholder="Enter access password"
            />
            <button
              type="submit"
              class="w-full mt-4 bg-wba-deep text-white font-semibold py-3 px-6 rounded-lg hover:bg-wba-blue transition-colors"
            >
              Access Scan
            </button>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
